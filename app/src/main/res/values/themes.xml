<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SOS" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorError">@color/colorError</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Standard Material Attributes mapping -->
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_white</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutline</item>
    </style>

    <style name="Theme.SOS" parent="Base.Theme.SOS" />

    <style name="MyStyle">
        <item name="android:background">@drawable/img</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>